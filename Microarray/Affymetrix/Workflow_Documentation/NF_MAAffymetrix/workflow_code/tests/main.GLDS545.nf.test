nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("GLDS-545: Should run without failures") {

        when {
            params {
                // define parameters here. Example: 
                osdAccession = "OSD-545"
                gldsAccession = "GLDS-545"
                // biomart_attribute = "AFFY HTA 2 0" IN ISA
                limit_biomart_query = 300
                runsheetPath = "/workspace/GLDS-545_test_data/OSD-545_microarray_v0_runsheet.csv" // Needed as ISA archive needed removal of chp files
            }
        }

        then {
            assert workflow.success
            assert snapshot(
                            path("${params.outputDir}/${params.gldsAccession}/Metadata").list(),
                            path("${params.outputDir}/${params.gldsAccession}/00-RawData").list(),
                            path("${params.outputDir}/${params.gldsAccession}/01-oligo_NormExp").list(),
                            path("${params.outputDir}/${params.gldsAccession}/02-limma_DGE").list(),
                            [ 'Affymetrix.html exists' : path("${params.outputDir}/${params.gldsAccession}/GeneLab/Affymetrix.html").exists()],
                            ).match()
        }

    }

}
